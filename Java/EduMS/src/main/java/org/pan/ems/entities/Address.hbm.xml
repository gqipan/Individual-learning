<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pan.ems.entities.Address" table="OA_ADDRESS">
        
        <id name="addressId" type="java.lang.Integer">
            <column name="ADDRESS_ID" />
            <generator class="native" />
        </id>
        
        <!-- Address 到 Province 和 City 是单向 1-1 的关联关系 -->
        <!-- 获取 Address 时使用左外连接获取其关联的 City -->
        <many-to-one name="city" class="org.pan.ems.entities.City"
        	unique="true" fetch="join">
            <column name="CITY_ID" />
        </many-to-one>
        
        <property name="postCode" type="java.lang.String">
            <column name="POST_CODE" />
        </property>
        
        <property name="details" type="java.lang.String">
            <column name="DETAILS" />
        </property>
        
    </class>
    
</hibernate-mapping>
